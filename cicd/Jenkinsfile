pipeline {
    agent any
    tools {
        terraform 'terraform'
    }
    stages {
        stage('Change Dir') {
           steps{
               sh 'cd terraform/'
           }
        }
        stage('Terraform Init') {
           steps{
                sh 'cd ../terraform && terraform init'
           }
        }
        stage('Terraform Validate') {
            steps{
                sh 'cd ../terraform && terraform validate'
            }

        }
    }
}
